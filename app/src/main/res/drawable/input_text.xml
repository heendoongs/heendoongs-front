<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EFEEEE" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="330"
                android:startColor="#80C3BEBE"
                android:centerColor="#40C3BEBE"
                android:endColor="#EFEEEE" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>