<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/coordi_detail_title_text"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dongle_bold"
        android:text="진수의 남침룩"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/coordi_detail_image"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/coordi_detail_title_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dongle_bold"
        android:text="진수의 남침룩"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/coordi_detail_image"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/coordi_detail_update_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@id/coordi_detail_delete_button"
        app:layout_constraintTop_toTopOf="@+id/coordi_detail_title_text"
        app:layout_constraintBottom_toBottomOf="@+id/coordi_detail_title_text"
        app:srcCompat="@drawable/ic_coordi_detail_update" />

    <ImageButton
        android:id="@+id/coordi_detail_check_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/coordi_detail_delete_button"
        app:layout_constraintTop_toTopOf="@+id/coordi_detail_title_text"
        app:layout_constraintBottom_toBottomOf="@+id/coordi_detail_title_text"
        app:srcCompat="@drawable/ic_check" />

    <ImageButton
        android:id="@+id/coordi_detail_delete_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/coordi_detail_title_text"
        app:layout_constraintTop_toTopOf="@+id/coordi_detail_title_text"
        app:srcCompat="@drawable/ic_coordi_detail_delete" />

    <ImageButton
        android:id="@+id/coordi_detail_x_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/coordi_detail_title_text"
        app:layout_constraintTop_toTopOf="@+id/coordi_detail_title_text"
        app:srcCompat="@drawable/ic_x" />

    <ImageView
        android:id="@+id/coordi_detail_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="90dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="0dp">
    </ImageView>

    <ImageView
        android:id="@+id/coordi_detail_vote_heart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/coordi_detail_nickname"
        app:layout_constraintBottom_toBottomOf="@id/coordi_detail_create_date"
        android:src="@drawable/ic_coordi_detail_heart"
        />

    <TextView
        android:id="@+id/coordi_detail_vote_count"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:fontFamily="@font/dongle_regular"
        android:text="527"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@id/coordi_detail_vote_heart"
        app:layout_constraintBottom_toBottomOf="@id/coordi_detail_vote_heart"
        app:layout_constraintStart_toEndOf="@id/coordi_detail_vote_heart"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:id="@+id/coordi_detail_nickname"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:fontFamily="@font/dongle_regular"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/coordi_detail_image"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/coordi_detail_create_date"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:fontFamily="@font/dongle_regular"
        android:text="2024.07.21"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/coordi_detail_nickname"
        app:layout_constraintEnd_toEndOf="@id/coordi_detail_nickname" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clothes_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/coordi_detail_image"
        app:layout_constraintBottom_toTopOf="@id/coordi_detail_vote_button"
        app:layout_constraintTop_toBottomOf="@+id/coordi_detail_create_date"
        tools:listitem="@layout/item_cloth_image" />

    <ImageButton
        android:id="@+id/coordi_detail_vote_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginBottom="7dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/coordi_detail_vote_voted" />

</androidx.constraintlayout.widget.ConstraintLayout>