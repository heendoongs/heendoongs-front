<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_battle_entrance">

    <ImageView
        android:id="@+id/battle_entrance_logo"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/battle_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/battle_entrance_start_btn"
        android:layout_width="156dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/img_start_btn"
        app:layout_constraintBottom_toTopOf="@+id/battle_entrance_help_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/battle_entrance_logo"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/battle_entrance_help_btn"
        android:layout_width="156dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/img_help_btn"
        app:layout_constraintBottom_toTopOf="@+id/battle_entrance_home_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/battle_entrance_start_btn" />

    <ImageView
        android:id="@+id/battle_entrance_home_btn"
        android:layout_width="156dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/img_home_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/battle_entrance_help_btn" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/battle_entrance_help_text_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#60000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/battle_entrance_logo">

        <ImageView
            android:id="@+id/battle_description"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:src="@drawable/battle_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/battle_entrance_help_close_btn"
            android:layout_width="124dp"
            android:layout_height="48dp"
            android:background="@drawable/img_close_btn"
            app:layout_constraintTop_toBottomOf="@+id/battle_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
